<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Document</title>
   <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
   <link href="styles.css" rel="stylesheet">
   <link href="alumni.css" rel="stylesheet">
</head>
<body>

    <%-include('navbar') %>

    <div class="queries-container">
         <% query.forEach(element => {%>
         <h1 class="question">
            <%=element.query%>   
         </h1>
         <form action="/individual-query" method="POST" class="answer">
            <input type="hidden" name="query_id" value="<%=element._id%>" >
            <button class="answerquery" type="submit"><%=element.answers.length%> ANSWER(s)</button>
         </form>
      <%});%>


      <div class="ask-query">
        <form action="/ask" method="POST">
          <input type="text" placeholder="ASK...." name="query"><br><br>
          <input type="text" placeholder="Name" name="user"><br><br>
          <button type="submit" class="ask-query-btn">ASK</button>
        </form>
      </div>
    </div>

</body>